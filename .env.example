# ============================================================================
# RAG Manufacturing Bot - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# ============================================================================

# ----------------------------------------------------------------------------
# Slack Configuration (Required)
# ----------------------------------------------------------------------------
# Get these from your Slack App settings at https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Optional: Specific channel ID for ingestion (auto-detected if not set)
# SLACK_CHANNEL_ID=C1234567890

# ----------------------------------------------------------------------------
# LLM Configuration (Optional - Ollama defaults shown)
# ----------------------------------------------------------------------------
# Model used for answer generation
GENERATION_MODEL=llama3.2

# Model used for embeddings
EMBEDDING_MODEL=nomic-embed-text

# Model used for reranking (optional, only if using rerank retrieval strategy)
RERANK_MODEL=bge-reranker-v2-m3

# Ollama base URL (default: http://localhost:11434)
# OLLAMA_BASE_URL=http://localhost:11434

# ----------------------------------------------------------------------------
# OpenAI Configuration (Optional - for OpenAI models instead of Ollama)
# ----------------------------------------------------------------------------
# Uncomment and set if using OpenAI models
# OPENAI_API_KEY=sk-your-openai-api-key-here
# GENERATION_MODEL=gpt-4
# EMBEDDING_MODEL=text-embedding-3-small

# ----------------------------------------------------------------------------
# Anthropic Configuration (Optional - for Claude models)
# ----------------------------------------------------------------------------
# Uncomment and set if using Anthropic Claude models
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# GENERATION_MODEL=claude-3-5-sonnet-20241022

# ----------------------------------------------------------------------------
# Vector Database Configuration (Optional)
# ----------------------------------------------------------------------------
# ChromaDB collection name (default: aerostream_docs)
# CHROMA_COLLECTION_NAME=aerostream_docs

# ChromaDB persistence directory (default: ./chroma_db)
# CHROMA_PERSIST_DIRECTORY=./chroma_db

# ----------------------------------------------------------------------------
# TruLens Evaluation Configuration (Optional)
# ----------------------------------------------------------------------------
# Database URL for TruLens (SQLite by default)
TRULENS_DATABASE_URL=sqlite:///trulens_eval.db

# Logging level for TruLens (DEBUG, INFO, WARNING, ERROR)
TRULENS_LOG_LEVEL=INFO

# Default app ID for evaluations (can be overridden via CLI)
# TRULENS_APP_ID=rag_manufacturing_bot

# Enable/disable feedback collection (default: true)
# TRULENS_ENABLE_FEEDBACK=true

# Feedback provider (default: langchain)
# TRULENS_FEEDBACK_PROVIDER=langchain

# ----------------------------------------------------------------------------
# Ingestion Configuration (Optional)
# ----------------------------------------------------------------------------
# Chunking strategy: standard or semantic (default: standard)
# CHUNKING_STRATEGY=standard

# Chunk size for standard chunking (default: 500)
# CHUNK_SIZE=500

# Chunk overlap for standard chunking (default: 50)
# CHUNK_OVERLAP=50

# Breakpoint threshold for semantic chunking (default: 0.5)
# SEMANTIC_BREAKPOINT_THRESHOLD=0.5

# ----------------------------------------------------------------------------
# Retrieval Configuration (Optional)
# ----------------------------------------------------------------------------
# Retrieval strategy: semantic, lexical, or semantic-rerank (default: semantic)
# RETRIEVAL_STRATEGY=semantic

# Number of documents to retrieve (default: 5)
# TOP_K=5

# Number of documents after reranking (default: 3, only for semantic-rerank)
# RERANK_TOP_K=3

# ----------------------------------------------------------------------------
# Evaluation Configuration (Optional)
# ----------------------------------------------------------------------------
# Default number of questions for evaluation (default: 50)
# EVAL_QUESTION_LIMIT=50

# Evaluation results directory (default: ./evaluation_results)
# EVAL_RESULTS_DIR=./evaluation_results

# ----------------------------------------------------------------------------
# Development/Debug Settings (Optional)
# ----------------------------------------------------------------------------
# Enable debug logging
# DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# ============================================================================
# End of Configuration
# ============================================================================
